# ============================================
# Food Delivery App - Production Environment
# ============================================
# COPY THIS FILE TO .env AND FILL IN YOUR VALUES
# DO NOT COMMIT .env TO VERSION CONTROL

# ======================
# Domain Configuration
# ======================
DOMAIN=fooddelivery.example.com
SSL_EMAIL=admin@example.com

# ======================
# MySQL Configuration
# ======================
MYSQL_ROOT_PASSWORD=ChangeMeToStrongPassword123!
MYSQL_USER=fooddelivery_app
MYSQL_PASSWORD=ChangeMeToAnotherStrongPassword456!

# ======================
# JWT Configuration
# ======================
# Generate with: openssl rand -hex 32
JWT_SECRET=5367566B59703373367639792F423F4528482B4D6251655468576D5A71347437
JWT_EXPIRATION=86400000

# ======================
# .NET Admin Service JWT
# ======================
ADMIN_JWT_KEY=ThIsIsAVeryLongAndSecureKeyForAdminRiderService123!
ADMIN_JWT_ISSUER=AdminRiderService
ADMIN_JWT_AUDIENCE=FoodDeliveryApp

# ======================
# Razorpay Configuration
# ======================
# Leave as placeholders if not using payments
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_key_secret

# ======================
# Environment
# ======================
ENVIRONMENT=production
LOG_LEVEL=INFO

# ======================
# Resource Limits (optional)
# ======================
# Adjust based on your VM specifications
MYSQL_MEMORY_LIMIT=512m
SERVICE_MEMORY_LIMIT=384m
FRONTEND_MEMORY_LIMIT=128m
